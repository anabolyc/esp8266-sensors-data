#!/bin/bash

url=  db=

while getopts u:d: opt; do
  case $opt in
  u)
      url=$OPTARG
      ;;
  d)
      db=$OPTARG
      ;;
  esac
done

shift $((OPTIND - 1))

response=$(curl -s $url)

error=$(echo "$response" | jq -r '.error')

echo $(date) "response from " "$url" ": " "$response"

if [ "$error" = 'null' ];
then
	temp=$(echo "$response" | jq -r '.temp')
	humi=$(echo "$response" | jq -r '.humidity')
	cdio=$(echo "$response" | jq -r '.cdio')
	echo "temp = " "$temp" "; humidity = " "$humi" "; cdio = " "$cdio"

	sqlite3 $db "insert into sensors_data (date, temp, humi, cdio) values (CURRENT_TIMESTAMP, $temp, $humi, $cdio)"
else
	echo "error: " "$error"
fi

